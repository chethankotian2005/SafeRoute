{
  "rules": {
    ".read": false,
    ".write": false,
    
    "safety_reports": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["timestamp", "type", "severity"]
    },
    
    "live_tracking": {
      "$trackingId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["userId", "timestamp"]
      }
    },
    
    "active_sos": {
      "$sosId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["userId", "active", "timestamp"]
      }
    },
    
    "user_status": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $userId",
        ".indexOn": ["online", "lastSeen"]
      }
    }
  }
}
