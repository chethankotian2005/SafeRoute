{
  "rules": {
    ".read": false,
    ".write": false,
    
    "live_tracking": {
      "$trackingId": {
        ".read": true,
        ".write": "auth != null",
        ".indexOn": ["userId", "timestamp"]
      }
    },
    
    "active_sos": {
      "$sosId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || data.child('sharedWith').child(auth.uid).exists())",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        ".indexOn": ["userId", "active", "timestamp"]
      }
    },
    
    "user_status": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $userId",
        ".indexOn": ["online", "lastSeen"]
      }
    }
  }
}
